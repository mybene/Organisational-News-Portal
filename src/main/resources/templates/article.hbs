
{{# partial "content"}}

    <style>
        .list{
        background-image:url('https://images.unsplash.com/photo-1551894116-15e3812343f1?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=500&q=60');
        background-size:contain;
        background-repeat:no-repeat;
        }
        h4,h3{
        color:blue;
        }
        .each{
        border:1px solid back;
        }


    </style>
    <body>
    <div class="list">



        <h3>Current News</h3>

        {{#if article}}
            {{#each article}}
                <div class="each">
                    <p><strong>News n.o:</strong>{{id}}</p>
                    <h4><u>{{title}}</u></h4>
                    <p>{{content}}</p>
                    <a class="btn btn-danger" href="/news/:id/delete" >Delete</a>
                </div>


            {{/each}}
        {{/if}}
    </div>
    </body>


{{/partial}}
